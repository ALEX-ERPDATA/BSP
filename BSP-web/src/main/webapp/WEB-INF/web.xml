<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- This is a context init parameter -->
    <context-param>
        <param-name>email</param-name>
        <param-value>admin@example.com</param-value>
    </context-param>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.gs.bsp.servlets.AuthFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/app/Main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>ru.gs.bsp.servlets.MainServlet</servlet-class>
    </servlet>
    
    
       
    
    
    
    
    <servlet>
        <servlet-name>SendJMSMessage</servlet-name>
        <servlet-class>ru.gs.bsp.servlets.SendJMSMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendJMSMessage</servlet-name>
        <url-pattern>/sendMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoServlet</servlet-name>
        <url-pattern>/getInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InfoServlet</servlet-name>
        <servlet-class>ru.gs.bsp.servlets.InfoServlet</servlet-class>
    </servlet>
